<article>
    <header>
        <h1><%= @recipe.nome %></h1>
        <%= imagem(@recipe) %>
    </header>
     <h2>Tipo</h2>
    <p>
        <%= @recipe.kind %>
    </p>
    <h2>Ingredientes</h2>
    <p>
        <%= @recipe.stuff %>
    </p>
    <h2>Calorias</h2>
    <p>
        <%= @recipe.calories %>
    </p>
    <h3>Modo de preparo</h3>
    <p>
        <%= @recipe.Prepare_mode %>
    </p>
     <h2>Tempo de preparo</h2>
    <p>
        <%= @recipe.duration.to_formatted_s(:time) %> min
    </p>
     <h2>porções</h2>
    <p>
        <%= pluralize(@recipe.portion, 'porção', 'porções') %>
    </p>
    <h3>Custo</h3>
    <p>
        <%= @recipe.cost %>
    </p>
</article>

<%= link_to "Receitas", recipes_path %>
<%= link_to "Editar Receitas", edit_recipe_path(@recipe) %>
<%= link_to "Deletar receitas", recipe_path(@recipe), method: :delete, data:{ confirm: "Deseja deletar esta receita?"} %>
