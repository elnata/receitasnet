<h1><%= pluralize(@recipes.size, "Receita", "Receitas") %></h1>

<ul>
<% @recipes.each do |recipe| %>
	<article>
	<header>
		
		<h2><%= recipe.nome %></h2>
		
		
	</header>
	<p>
		<%= truncate(recipe.stuff, length:15, separator: ' ') %>
	</p>
	<p>
	
			<%= formata_caloria (recipe) %>
	
	</p>
	<table>
		<tr>
			<td>Modo de preparo:</td>
			<td><%= recipe.Prepare_mode %></td>
		</tr>
		<tr>
			<td>Custo do preparo:</td>
			<td><%= number_to_currency(recipe.cost) %></td>
		</tr>
	</table>
	</article>
<% end %>
</ul>